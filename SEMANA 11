public class Main {

    public static void ordenar(int[] arreglo) {
        int n = arreglo.length;

        for (int brecha = n / 2; brecha > 0; brecha /= 2) {
            for (int i = brecha; i < n; i++) {
                int temp = arreglo[i];
                int j;

                for (j = i; j >= brecha && arreglo[j - brecha] > temp; j -= brecha) {
                    arreglo[j] = arreglo[j - brecha];
                }
                arreglo[j] = temp;
            }
        }
    }

    public static void imprimirArreglo(int[] arreglo) {
        for (int i = 0; i < arreglo.length; i++) {
            System.out.print(arreglo[i] + " ");
        }
        System.out.println();
    }

    public static void main(String args[]) {
        int[] datos = {12, 34, 54, 2, 3, 10, 5, 1};

        System.out.println("Arreglo antes del ordenamiento:");
        imprimirArreglo(datos);

        ordenar(datos);

        System.out.println("\nArreglo despuÃ©s del ordenamiento Shell:");
        imprimirArreglo(datos);
    }
}
